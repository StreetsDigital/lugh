# Lugh Production Environment (.env.prod)
# ========================================
# Copy to .env.prod and fill in values
#
# For use with: docker-compose -f docker-compose.prod.yml up -d

# Port (prod uses 3000)
PORT=3000

# AI Assistants
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...

# Telegram - PRODUCTION BOT (@Lugh)
# Create via @BotFather: /newbot → "Lugh" → @Lugh_bot
TELEGRAM_BOT_TOKEN=<prod-bot-token>

# Optional: Restrict to your user ID only
TELEGRAM_ALLOWED_USER_IDS=<your-telegram-user-id>

# GitHub (for PR creation, issue handling)
GH_TOKEN=ghp_...
GITHUB_TOKEN=ghp_...
WEBHOOK_SECRET=<random-secret>
GITHUB_ALLOWED_USERS=<your-github-username>

# Bot display name
BOT_DISPLAY_NAME=Lugh

# Streaming mode
TELEGRAM_STREAMING_MODE=stream

# Concurrency
MAX_CONCURRENT_CONVERSATIONS=10

# Builtin commands
LOAD_BUILTIN_COMMANDS=true

# Feature flags (conservative for prod - enable in staging first)
FEATURE_TELEGRAM_ADAPTER=true
FEATURE_PHONE_APPROVALS=false
FEATURE_BLOCKING_APPROVALS=false
