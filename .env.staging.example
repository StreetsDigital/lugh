# Lugh Staging Environment (.env.staging)
# ========================================
# Copy to .env.staging and fill in values
#
# For use with: docker-compose -f docker-compose.staging.yml up -d

# Port (staging uses 3001)
PORT=3001

# AI Assistants (same as prod - your API keys)
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-...

# Telegram - STAGING BOT (@LughDev)
# Create via @BotFather: /newbot → "LughDev" → @LughDev_bot
TELEGRAM_BOT_TOKEN=<staging-bot-token>

# Optional: Restrict to your user ID only
TELEGRAM_ALLOWED_USER_IDS=<your-telegram-user-id>

# GitHub (optional for staging)
GH_TOKEN=ghp_...
GITHUB_TOKEN=ghp_...

# Bot display name
BOT_DISPLAY_NAME=LughDev

# Streaming mode
TELEGRAM_STREAMING_MODE=stream

# Concurrency (lower for staging)
MAX_CONCURRENT_CONVERSATIONS=3

# Builtin commands
LOAD_BUILTIN_COMMANDS=true

# Feature flags (enable experimental features in staging first)
FEATURE_TELEGRAM_ADAPTER=true
FEATURE_PHONE_APPROVALS=false
FEATURE_BLOCKING_APPROVALS=false
